# Telegram Bot Configuration
# Скопируйте этот файл в .env и заполните реальными значениями

# ========================================
# ОСНОВНЫЕ НАСТРОЙКИ БОТА
# ========================================

# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# ID продакшн чата (основной чат для уведомлений)
CHAT_ID=your_production_chat_id_here

# ID тестового чата (для отладки и тестирования)
TEST_CHAT_ID=your_test_chat_id_here

# ========================================
# НАСТРОЙКИ ОПРОСОВ ТРЕНИРОВОК
# ========================================

# ID топика "АНОНСЫ ТРЕНИРОВОК" в чате
# Получить можно через @userinfobot или API
ANNOUNCEMENTS_TOPIC_ID=your_announcements_topic_id_here

# ========================================
# TELEGRAM CLIENT API (для сбора результатов опросов)
# ========================================

# API ID от https://my.telegram.org/apps
TELEGRAM_API_ID=your_telegram_api_id_here

# API Hash от https://my.telegram.org/apps
TELEGRAM_API_HASH=your_telegram_api_hash_here

# Номер телефона для авторизации (в формате +7XXXXXXXXXX)
TELEGRAM_PHONE=your_phone_number_here

# ========================================
# GOOGLE SHEETS (для сохранения статистики)
# ========================================

# JSON credentials для Google Sheets API
# Получить можно в Google Cloud Console
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"..."}

# ID Google таблицы (из URL)
SPREADSHEET_ID=your_google_spreadsheet_id_here

# ========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ========================================

# Целевые команды для мониторинга (через запятую)
# По умолчанию: PullUP
TARGET_TEAMS=PullUP

# Режим тестирования (1 - включен, 0 - выключен)
DRY_RUN=0

# Использование браузера для парсинга (1 - включен, 0 - выключен)
USE_BROWSER=0
